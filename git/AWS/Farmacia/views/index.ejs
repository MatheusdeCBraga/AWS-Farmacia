<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmácia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('./partial/header'); %>
    
    <main class="container mt-4">
        <% if (medicines.length === 0) { %>
            <div class="text-center">
                <h1>Ainda não há medicamentos cadastrados.</h1>
                <a class="btn btn-primary mt-3" href="/medicines/new">Adicionar Medicamento</a>
            </div>
        <% } else { %>
            <h1 class="mb-4">Lista de Medicamentos</h1>
            <ul class="list-group">
                <% medicines.forEach(medicine => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><%= medicine.name %> - Quantidade: <%= medicine.quantity %></span>
                        <a class="btn btn-secondary" href="/medicines/<%= medicine.id %>">Detalhes</a>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </main>

    <%- include('./partial/footer'); %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
